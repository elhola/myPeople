@{
    ViewData["Title"] = "Home Page";
}
@model List<Empal.Models.Employee>

<div class="text-center">
    <h1 class="display-4">Список співробітників</h1>

    @if (Model != null && Model.Count > 0)
    {
            <p>@Html.ActionLink("Додати нового співробітника", "Create")</p>
            <p>@Html.ActionLink("Пошук співробітників", "Search")</p>

            <table class="table">
                <tr>
                    <th>Прізвище</th>
                    <th>Ім'я</th>
                    <th>Посада</th>
                    <th>Відділ</th>
                    <th>Дії</th>
                </tr>
            @foreach (var employee in Model)
            {
                        <tr>
                            <td>@employee.LastName</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.Position</td>
                            <td>@employee.Department</td>
                            <td>
                        @Html.ActionLink("Деталі", "Details", new { id = employee.Id })
                        @Html.ActionLink("Редагувати", "Edit", new { id = employee.Id })
                        @Html.ActionLink("Видалити", "Delete", new { id = employee.Id })
                            </td>
                        </tr>
            }
            </table>
    }
    else
    {
            <p>Список співробітників порожній.</p>
            <p>@Html.ActionLink("Додати нового співробітника", "Create")</p>
    }
</div>

